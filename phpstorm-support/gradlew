#!/bin/sh
# Gradle wrapper bootstrap script
# Run this first: gradle wrapper --gradle-version=8.5

GRADLE_VERSION=8.5
GRADLE_WRAPPER_JAR="gradle/wrapper/gradle-wrapper.jar"

if [ ! -f "$GRADLE_WRAPPER_JAR" ]; then
    echo "Gradle wrapper not found. Setting up..."

    if command -v gradle >/dev/null 2>&1; then
        gradle wrapper --gradle-version=$GRADLE_VERSION
    else
        echo "Gradle not installed. Please install Gradle first:"
        echo "  brew install gradle    # macOS"
        echo "  sudo apt install gradle # Ubuntu/Debian"
        echo "  sdk install gradle     # SDKMAN"
        echo ""
        echo "Or download from: https://gradle.org/releases/"
        exit 1
    fi
fi

exec ./gradlew "$@"
